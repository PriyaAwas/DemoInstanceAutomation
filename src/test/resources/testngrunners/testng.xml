<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Test Execution">

    <listeners>
        <listener class-name="sew.ai.helpers.listeners.TestListeners"/>
        <listener class-name="sew.ai.helpers.listeners.MethodInterceptor"/>
        <listener class-name="sew.ai.helpers.listeners.AnnotationTransformer"/>
        <listener class-name="sew.ai.helpers.testrail.TestRailListener"/>
    </listeners>

    <test name="E2E Test Suite On Web - Chrome">
        <parameter name="platformType" value="web"/>
        <parameter name="platformName" value="chrome"/>
        <parameter name="portalType" value="scp"/>
 
        <classes>
        
            <class name="demo.tests.scp.BillingHistoryTests"/>
            <class name="demo.tests.scp.NotificationTests"/>
            <class name="demo.tests.scp.ForgetUsernameTest"/>
            <class name="demo.tests.scp.NotificationPreferenceTests"/>
            <class name="demo.tests.scp.ProblemSigningInTest"/>
            <class name="demo.tests.scp.ForgetPasswordTests"/>
            <class name="demo.tests.scp.MyProfileTests"/>
            <class name="demo.tests.scp.UserDashboardTests"/>
            <class name="demo.tests.scp.PostLogContactUsTests"/>
            <class name="demo.tests.scp.PreLoginTests"/>
            <class name="demo.tests.scp.PaymentInfoTests"/>
            <class name="demo.tests.scp.AboutMyHomeTests"/>
            <class name="demo.tests.scp.AccountInformationTests"/> 
            <class name="demo.tests.scp.PreLoginOutagesTests"/>
            <class name="demo.tests.scp.UsagesTests"/>
            
        </classes>
    </test>

</suite>
